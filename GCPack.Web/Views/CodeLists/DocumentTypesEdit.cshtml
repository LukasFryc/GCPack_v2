@model GCPack.Model.DocumentTypeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("SaveDocumentType", "CodeLists", FormMethod.Post))
{
<div class="container">
    <input type="hidden" name="ID" value="@Model.ID" />
    <div class="row">
        <div class="col-md-2">Název</div>
        <div class="col-md-6">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Název typu dokumentu" } })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">Správce</div>
        <div class="col-md-6">
            @Html.DropDownListFor(m => m.AdministratorID, new SelectList(ViewBag.Users, "ID", "Value"), new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">Pořadí</div>
        <div class="col-md-6">
            @Html.EditorFor(m => m.OrderBy, new { htmlAttributes = new { @class = "form-control", @placeholder = "Název typu dokumentu" } })
        </div>
    </div>

    <div class="row">
        <div class="col-md-2"><input type="submit" class="btn btn-success" /></div>
    </div>
</div>
}