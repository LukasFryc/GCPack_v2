@model GCPack.Model.DocumentModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    var timeoutHandle;
    $(document).ready(function () {
        $('#filter').keyup(function () {
            GetUsers();
        });

        $('#jobPosition').change(function () {
            GetUsers();
        });


        function GetUsers()
        {
            if (timeoutHandle != null) window.clearTimeout(timeoutHandle);

            timeoutHandle = setTimeout(
                function () {

                    $.getJSON("/user/getUsers", { name: $('#filter').val(), jobPositionId: $('#jobPosition').val() })
                        .done(function (json) {
                            console.log("JSON Data: " + json[0].FirstName);
                        })
                        .fail(function (jqxhr, textStatus, error) {
                            var err = textStatus + ", " + error;
                            console.log("Request Failed: " + err);
                        });


                },
                500);
        }
    });

</script>

<h2>@ViewBag.Type</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div>
@using (Html.BeginForm("Save", "Documents", FormMethod.Post, new { @enctype = "multipart/form-data" }))
