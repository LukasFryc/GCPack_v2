                        }
                    </select>
                </div>

                <select multiple name="FilteredUsers" id="FilteredUsers" class="selectBoxes">
                </select>
                <br />
                <input type="button" value="Přiřadit vybrané uživatele k dokumentu" id="AddUserToList" class="btn btn-default" />
            </div>

            </div>
    </div>

    <div style="clear:both;margin-bottom:10px"></div>

    <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uložit" class="btn btn-default" />
            </div>
        </div>

        }
    </div>