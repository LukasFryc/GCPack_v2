<script>
        $(document).ready(function () {
            $("#section-filter-plus1").on("hide.bs.collapse", function () {
                $("#btnCollapse1").html('<span class="glyphicon glyphicon-collapse-down"></span> +');
                //$("#DocumentTypeID").val(0);
                $("#ProjectID").val(0);
                $("#DivisionID").val(0);
                $("#AppSystemID").val(0);
                $("#WorkplaceID").val(0);
             
